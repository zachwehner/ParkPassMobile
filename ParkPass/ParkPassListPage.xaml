<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ParkPass.ParkPassListPage"  xmlns:local="clr-namespace:ParkPass;assembly=ParkPass" BackgroundColor = "{StaticResource greenButtonBackgroundColor}">
	    <ContentPage.Content>
	    <Frame Padding = "0,0,0,0" Margin = "10" HorizontalOptions = "FillAndExpand" OutlineColor = "White" BackgroundColor="White" HasShadow = "true">
		<StackLayout Margin = "2">      
            <ListView x:Name="myPassesListView" CachingStrategy="RecycleElement" >
			<ListView.Header>
		<Label Text="My Passes" FontSize="24" BackgroundColor = "{ StaticResource facebookButtonBackgroundColor}" TextColor = "{ StaticResource whiteLabelTextColor}" />
		</ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:ParkPassCell Name="{Binding Name}" ParkName= "{Binding ParkName}" Category="{Binding Category}" Status="{Binding Status}" PurchasedDate="{Binding PurchasedDate}" PassPrice="{Binding PassPrice}" ImageFilename="{Binding ImageFilename}" Tapped="Handle_Tapped"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
			</Frame>
    </ContentPage.Content>
	
</ContentPage>
