<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ParkPass.ForgotPasswordPage" BackgroundImage="BackgroundImage.png" xmlns:coreviews="clr-namespace:ParkPass.Views;assembly=ParkPass">
	<ContentPage.Content>
		<StackLayout Margin="20,0,20,0" VerticalOptions="Center" Spacing="50">
		<Label HorizontalTextAlignment="Center" Text="Forgot Password" TextColor="{StaticResource brownLabelColor}"  FontFamily="SanFranciscoText-Light" FontSize="24"></Label>
			<Label HorizontalTextAlignment="Center" Text="Enter you email address to reset your password" TextColor="{StaticResource termsgreyLabelColor}"  FontFamily="SanFranciscoText-Light" FontSize="16"></Label>
			<coreviews:TextEntry x:Name="passwordEntry" Placeholder="Email" Grid.Row="1" IsPassword="true"/>

			<Button Text="Reset Password" FontSize="12"  BorderRadius= "20" BorderColor="{StaticResource brownLabelColor}" TextColor="{StaticResource defaultButtonTextColor}" BackgroundColor="{StaticResource brownLabelColor}" Clicked="Reset_Password_Clicked"/>


		</StackLayout>
	</ContentPage.Content>
</ContentPage>
