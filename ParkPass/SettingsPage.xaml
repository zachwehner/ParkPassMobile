<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ParkPass.SettingsPage" BackgroundColor = "{StaticResource greenButtonBackgroundColor}">
	<ContentPage.Content>
		<Frame Padding = "0,0,0,0" Margin = "10" HorizontalOptions = "FillAndExpand" OutlineColor = "White" BackgroundColor="White" HasShadow = "true">
		<StackLayout Margin = "2">
			<TableView>
				<TableView.Root>
					<TableRoot>
						<TableSection Title="Options">
							<SwitchCell Text="Share Location"></SwitchCell>
							<SwitchCell Text="Allow Notificaions"></SwitchCell>
							<SwitchCell Text="Send Surveys"></SwitchCell>
						</TableSection>
						<TableSection Title="Information">
							<TextCell Text="About"/>
							<TextCell Text="Privacy"/>
							<TextCell Text="FAQ"/>
							<TextCell Text="parkpasspreferred@gmail.com" />
						</TableSection>

					</TableRoot>
				</TableView.Root>
			</TableView>
				</StackLayout></Frame>
	</ContentPage.Content>
</ContentPage>