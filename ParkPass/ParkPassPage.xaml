<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ParkPass.ParkPassPage" Title="ParkPasses"
			xmlns:coreviews="clr-namespace:ParkPass.Views;assembly=ParkPass"

		Padding="25, 20, 25, 10"
             BackgroundColor="{StaticResource defaultBackgroundColor}"
             >
	<ContentPage.Content>
		<StackLayout>
	
		<ListView x:Name="ParkPassListView" Header="Available ParkPasses:" HasUnevenRows="true" SelectedItem="{Binding objItemSelected, Mode=TwoWay}">

			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Vertical" Padding="20" BackgroundColor="Red">
							<Label Text="{Binding Name}"
								Font="Large"/>
							<Label Text="{Binding Price}" 
								Font="Small"/>
							<Label Text="{Binding Description}" 
								Font="Small"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
			<Button Text="Checkout" Clicked="Handle_Clicked">
		</Button>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
